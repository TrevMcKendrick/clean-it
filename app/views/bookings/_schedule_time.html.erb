<div id="schedule-time" style="display:block;">
    <div class="header">
      <h1>Schedule a time</h1>
    </div>

    <div id="calendar"></div>

    <hr>
    
    <input type="hidden" id="reservation-time" value="" name="booking[time]"/>

    <div id="calendar-days" class="calendar-buttons">
        <button type="button" class="btn time" value="10.00">7:30 AM</button>
        <button type="button" class="btn time" value="10.00">9:00 AM</button>
        <button type="button" class="btn time" value="10.00">10:00 AM</button>
        <button type="button" class="btn time" value="10.30">10:30 AM</button>
        <button type="button" class="btn time" value="11.00">11:00 AM</button>
        <button type="button" class="btn time" value="11.30">11:30 AM</button>
        <button type="button" class="btn time" value="12.00">12:00 PM</button>
        <button type="button" class="btn time" value="13.00">1:00 PM</button>
        <button type="button" class="btn time" value="13.30">1:30 PM</button>
        <button type="button" class="btn time" value="14.00">2:00 PM</button>
        <button type="button" class="btn time" value="15.00">3:00 PM</button>
        <button type="button" class="btn time" value="16.00">4:00 PM</button>
        <button type="button" class="btn time" value="16.30">4:30 PM</button>
        <button type="button" class="btn time" value="17.00">5:00 PM</button>
        <button type="button" class="btn time" value="18.00">6:00 PM</button>
        <button type="button" class="btn time" value="18.30">6:30 PM</button>
    </div>

    <%= link_to "Next", '#payment-info', :id => "schedule-time-complete", :class => "btn next-step btn-block" %>
</div>