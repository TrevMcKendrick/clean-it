<div class="container">
  <div class="row">
    <div class="span3"></div>
    <div class="span6 bordered" id="sign-in-form-container">
      <div id="sign-in-form">
        <div class="header">
          <h1>Sign in</h1>
        </div>
        <div class="sign-in-form-details" id="sign-in-fields-container">
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
            <div id="sign-in-email">
              <%= f.label :email %>
              <%= f.email_field :email, :autofocus => true, :class => "user_email_signin" %>
            </div>

            <div>
              <%= f.label :password %>
              <%= f.password_field :password, :class => "user_email_signin" %>
            </div>

            <div>
              <%= f.submit "Sign in", :class => "btn btn-success btn-sign-in" %>
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>

      </div>

      

    </div>
    <div class="span3"></div>
  </div>
</div>
