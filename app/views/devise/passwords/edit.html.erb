<div class="container">
  <div class="row">
    <div class="span3"></div>
    <div class="span6 bordered" id="sign-in-form-container">

      <div id="sign-in-form">
        <div class="header">
          <h1>Change your password</h1>
        </div>

        <div class="sign-in-form-details" id="sign-in-fields-container">
          <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>

            <div><%= f.label :password, "New password", :id =>"sign-in-email", :class => "password-field" %>
              <%= f.password_field :password, :autofocus => true, :class => "user_email_signin new-password" %>
            </div>

            <div><%= f.label :password_confirmation, "Confirm new password" %>
              <%= f.password_field :password_confirmation, :class => "user_email_signin" %>
            </div>

            <div>
              <%= f.submit "Change my password", :class => "btn btn-success btn-sign-in" %>
            </div>
            
          <% end %>
          
        </div>
      </div>

    </div>
    <div class="span3"></div>
  </div>
</div>
