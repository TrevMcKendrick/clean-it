<div class="container">
  <div class="row">
    <div class="span3"></div>
      <div class="span6 bordered" id="sign-in-form-container">
       <div id="sign-in-form">
          
          <div class="header">
            <h1>Forgot your password?</h1>
          </div>

          <div class="sign-in-form-details" id="sign-in-fields-container">
            <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
            
            <%= devise_error_messages! %>

              <div>
                <%= f.label :email, :id =>"sign-in-email" %>
                <%= f.email_field :email, :autofocus => true, :class => "user_email_signin" %>
              </div>

              <div>
                <%= f.submit "Send me reset password instructions", :class => "btn btn-success btn-sign-in" %>
              </div>
              
            <% end %>
          </div>

        </div>
      </div>
    <div class="span3"></div>
  </div>
</div>
